{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ALWAYS",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "startCommand": "gunicorn app:app --timeout 300 --workers 1 --bind 0.0.0.0:$PORT"
  }
}
